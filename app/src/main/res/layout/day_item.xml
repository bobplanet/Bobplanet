<?xml version="1.0" encoding="utf-8"?>
<!-- 일간화면에 표시될 아침-점심-저녁 메뉴 CardView. RecyclerView 안에 들어간다. -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:foreground="?android:attr/selectableItemBackground">

	<!-- 이미지 / 메뉴명 / 서브메뉴 / 칼로리 등을 담는 layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/list_row_selector">

        <!-- 이미지 + '아침/점심/저녁' -->
        <FrameLayout
            android:id="@+id/thumbnail_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:transitionName="menu_icon"/>

            <TextView
                android:id="@+id/when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/thumbnail_label_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/thumbnail_label_size"
                tools:text="아침" />

        </FrameLayout>

        <!-- 메뉴이름 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/thumbnail_holder"
            android:layout_toRightOf="@id/thumbnail_holder"
            android:textSize="@dimen/daily_name"
            android:textStyle="bold"
            android:transitionName="menu_title"
            tools:text="Menu title" />

        <!-- 평점 -->
        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/title"
            android:numStars="5"
            android:paddingTop="4dp"
            android:theme="@style/AppTheme"
            />

        <!-- 서브메뉴 -->
        <TextView
            android:id="@+id/submenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@id/thumbnail_holder"
            android:textSize="@dimen/daily_sub"
            tools:text="Submenus 1, Submenus 2" />

        <!-- 칼로리 -->
        <TextView
            android:id="@+id/calories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/submenu"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/thumbnail_holder"
            android:textColor="@color/calories"
            android:textSize="@dimen/daily_calories"
            tools:text="860 KCal" />

    </RelativeLayout>
	
</android.support.v7.widget.CardView>