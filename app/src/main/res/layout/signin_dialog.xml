<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_login_desc" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/signin_button_1"
                android:layout_width="@dimen/login_button_size"
                android:layout_height="@dimen/login_button_size"
                android:theme="@style/AppTheme.LoginButton" />

            <ImageButton
                android:id="@+id/signin_button_2"
                android:layout_width="@dimen/login_button_size"
                android:layout_height="@dimen/login_button_size"
                android:theme="@style/AppTheme.LoginButton" />

            <ImageButton
                android:id="@+id/signin_button_3"
                android:layout_width="@dimen/login_button_size"
                android:layout_height="@dimen/login_button_size"
                android:theme="@style/AppTheme.LoginButton" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>