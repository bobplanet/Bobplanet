<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- 모든 스타일의 엄마 스타일. 직접 사용되지 않고 상속받아 사용해야 함 -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

	<!-- 기본 스타일 -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <!-- 스플래시화면 스타일 -->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/splash_background</item>
        <item name="colorPrimaryDark">@color/splash_background</item>
    </style>

	<!-- 상세페이지용 스타일. Lollipop 이상에서는 StatusBar 침범 가능 -->
    <style name="AppTheme.Detail" parent="AppTheme">
    </style>

	<!-- 설정화면 스타일 -->
    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="colorAccent">@color/primary_dark</item>
    </style>

	<!-- 일반화면용 툴바의 스타일 -->
    <style name="AppTheme.Toolbar" parent="@style/AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
		<item name="android:actionModeBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.LoginButton" parent="android:style/Widget.ImageButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/signin_button_border</item>
        <item name="android:padding">6dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
