<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.bobplanet.android">

    <!-- 네트웤에서 데이터 가져와야 하므로 기본적으로 필요 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Google login을 위해 필요 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- GCM 이용을 위해 필요한 권한 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

    <!-- 아래 permission을 정의해야 다른 앱이 GCM 메시지를 가로채지 못함 -->
    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <!-- 애플리케이션 -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- 메인 Actiivty -->
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 일간 조회 Acivity -->
        <activity
            android:name=".DayActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <!-- 메뉴 조회 Activity -->
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_menu"
            android:parentActivityName=".DayActivity"
            android:theme="@style/AppTheme.Detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DayActivity" />
        </activity>

        <!-- 설정화면 Activity -->


        <!-- GCM 메시지를 수신하는 Receiver -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <!-- Play Services의 GA가 데이터를 보낼 때 "보낼 데이터 있으면 내놔"라는 이벤트 수신용 Receiver -->
        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <!-- GCM 등록 Service -->
        <service
            android:name=".gcm.GcmServices$Registration"
            android:exported="false" />

        <!-- GCM 메시지 수신 Service -->
        <service
            android:name=".gcm.GcmServices$MessageListener"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <!-- 인스턴스ID 변경이벤트 수신 Service -->
        <service
            android:name=".gcm.GcmServices$InstanceIDListener"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <!-- Analytics Service -->
        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>